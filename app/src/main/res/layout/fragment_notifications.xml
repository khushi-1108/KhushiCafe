<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="16dp">

    <ImageView
        android:id="@+id/Christmas_image"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/christmas"/>

    <TextView
        android:id="@+id/Christmas_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Christmas Event"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Christmas_image"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/New_Year_image"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Christmas_text"
        android:background="@drawable/newyear"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/New_Year_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="New Year Event"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/New_Year_image"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/Valentine_image"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/New_Year_text"
        android:background="@drawable/valentine"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/Valentine_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Valentine's Day Event"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Valentine_image"
        android:layout_marginTop="8dp" />

    <!-- Add another ImageView and TextView for additional events as needed -->

</androidx.constraintlayout.widget.ConstraintLayout>
